<resources>
	<declare-styleable name="ImageTextButton">
		<attr name="text" format="string" />
		<attr format="integer" name="image"/>
		<attr name="text_font" format="string" />
		<attr name="text_style" format="string" />
		<attr name="text_size" format="integer" />
	</declare-styleable>

	<declare-styleable name="BigFatImageButton">
		<attr format="integer" name="icon"/>
		<attr format="integer" name="background" />
	</declare-styleable>

	<declare-styleable name="BigFatProgressbar">
		<attr format="integer" name="progressdrawable" />
		<attr format="integer" name="textsize" />
		<attr format="boolean" name="countdown" />
	</declare-styleable>
	
	<declare-styleable name="BigFatSlider">
		<attr format="integer" name="filldrawable" />
		<attr format="integer" name="sliderdrawable" />
		<attr format="integer" name="width" />
		<attr format="integer" name="max" />
		<attr format="integer" name="min" />
		<attr format="integer" name="value" />
	</declare-styleable>
	
	<declare-styleable name="BigFatTurner">
		<attr format="integer" name="fill" />
		<attr format="integer" name="handle" />
		<attr format="integer" name="padding" />
		<attr format="integer" name="max_value" />
		<attr format="integer" name="min_value" />
	</declare-styleable>
</resources>
