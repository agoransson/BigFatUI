<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent" android:background="#efefef"
	xmlns:simplewidgets="http://schemas.android.com/apk/res/se.goransson.simplewidgets_examples"
	android:weightSum="1">

	<TextView android:layout_height="wrap_content" android:id="@+id/textView1"
		android:text="TextView" android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="match_parent" android:textColor="#000"
		android:layout_margin="10dp" android:gravity="center"></TextView>
	<se.goransson.andreas.simplewidgets.BigSlider
		android:layout_height="wrap_content" android:id="@+id/bigSlider2"
		android:layout_width="match_parent" android:layout_margin="10dp"></se.goransson.andreas.simplewidgets.BigSlider>

	<se.goransson.andreas.simplewidgets.BigSlider
		android:id="@+id/bigSlider1" android:layout_width="match_parent"
		android:layout_margin="10dp" simplewidgets:drawline="true"
		simplewidgets:background="#efefef" simplewidgets:foreground="#00ff00"
		android:layout_height="20dp"></se.goransson.andreas.simplewidgets.BigSlider>

	<se.goransson.andreas.simplewidgets.BigSlider
		android:id="@+id/bigSlider3" android:layout_width="match_parent"
		android:layout_margin="10dp" android:layout_height="100dp"
		simplewidgets:radialsize="400"></se.goransson.andreas.simplewidgets.BigSlider>

</LinearLayout>
